<h1>Log In</h1>

<br>
<%= form_for(:session, url: login_path) do |f| %>
  <%= f.label :email %>
  <%= f.email_field :email %><br><br>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <br><br>
  <%= f.submit "Log in" %>
<% end %>
<br><br>
<p>New user? <%= link_to "Sign up here.", signup_path %></p>